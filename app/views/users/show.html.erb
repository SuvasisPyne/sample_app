<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
   <section>
   <h1><%= gravatar_for @user %> 
   <%= @user.name %></h1>

<p>Your email id is <%= @user.email %></p>
  </section>
 </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Your Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>


